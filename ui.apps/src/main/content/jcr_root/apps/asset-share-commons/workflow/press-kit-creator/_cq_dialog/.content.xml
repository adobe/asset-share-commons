<jcr:root jcr:primaryType="nt:unstructured" jcr:title="Press kit generator (Asset Share Commons)"
          helpPath="https://opensource.adobe.com/asset-share-commons/press-kit.html"
          sling:resourceType="cq/gui/components/authoring/dialog" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <common jcr:primaryType="nt:unstructured" cq:hideOnEdit="true"/>
            <process jcr:primaryType="nt:unstructured" cq:hideOnEdit="true"/>
            <processcommon jcr:primaryType="nt:unstructured" jcr:title="Common"
                           sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <basic jcr:primaryType="nt:unstructured"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <title jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                           disabled="false" fieldLabel="Title" name="./jcr:title"/>
                                    <description jcr:primaryType="nt:unstructured"
                                                 sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                 disabled="false" fieldLabel="Description" name="./jcr:description"/>
                                </items>
                            </basic>
                            <advanced jcr:primaryType="nt:unstructured" jcr:title="Advanced Settings"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <advance jcr:primaryType="nt:unstructured"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                             fieldDescription="Check if your handler will advance to the next step."
                                             fieldLabel="Handler Advance" name="./metaData/PROCESS_AUTO_ADVANCE"
                                             text="Handler Advance" value="true"/>
                                </items>
                            </advanced>
                        </items>
                    </column>
                </items>
            </processcommon>
            <processargs jcr:primaryType="nt:unstructured" jcr:title="Arguments"
                         sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <arguments jcr:primaryType="nt:unstructured" jcr:title="Press kit creator configuration"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <root-page-path jcr:primaryType="nt:unstructured"
                                                   sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                   fieldLabel="Press kit pages root path"
                                                   rootPath="/content"
                                                   required="{Boolean}true"
                                                   emptyText="Defaults to: /content/press-kits"
                                                   name="./metaData/ROOT_PATH_PATH"/>

                                    <template-path jcr:primaryType="nt:unstructured"
                                                   sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                   fieldLabel="Press kit page template path"
                                                   rootPath="/conf"
                                                   required="{Boolean}true"
                                                   name="./metaData/PRESS_KIT_PAGE_TEMPLATE_PATH"/>

                                    <banner-resource-type jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Press kit banner component resource type"
                                                        required="{Boolean}true"
                                                        name="./metaData/BANNER_COMPONENT_RESOURCE_TYPE"/>

                                    <banner-image-property-name jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Press kit banner component asset reference property"
                                                        emptyText="Defaults to: fileReference"
                                                        required="{Boolean}true"
                                                        name="./metaData/BANNER_COMPONENT_IMAGE_PROPERTY_NAME"/>

                                    <banner-text-property-name jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Press kit Hero component asset reference property"
                                                                required="{Boolean}true"
                                                                emptyText="Defaults to: jcr:title"
                                                                name="./metaData/BANNER_COMPONENT_TEXT_PROPERTY_NAME"/>

                                    <press-kit-resource-type jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Press kit component resource type"
                                                            required="{Boolean}true"
                                                            name="./metaData/PRESS_KIT_COMPONENT_RESOURCE_TYPE"/>

                                    <press-kit-property-name jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Press kit component assets reference property"
                                                            required="{Boolean}true"
                                                            name="./metaData/PRESS_KIT_COMPONENT_PROPERTY_NAME"/>
                                </items>
                            </arguments>
                        </items>
                    </column>
                </items>
            </processargs>
            <workflow-process jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                              cq:hideOnEdit="true"
                              name="./metaData/PROCESS"
                              value="com.adobe.aem.commons.assetshare.workflow.impl.PressKitCreatorWorkflowProcess"/>

        </items>
    </content>
</jcr:root>