<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Action Buttons"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <main
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">

                                    <instructions
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/heading"
                                            level="{Long}4"
                                            text="Actions must be enabled on the parent Asset Share page for actions buttons to display."/>
                                    <hide-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="Hide the label."
                                            name="./hideLabel"
                                            text="Hide Label"
                                            value="true"/>
                                    <label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Actions"
                                            fieldDescription="Label above the action buttons."
                                            fieldLabel="Label"
                                            name="./label"/>
                                    <download-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Download"
                                            fieldDescription="Label for the download button."
                                            fieldLabel="Download Label"
                                            name="./downloadLabel"/>
                                    <share-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Share"
                                            fieldDescription="Label for the share button."
                                            fieldLabel="Share Label"
                                            name="./shareLabel"/>
                                    <add-to-cart-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Add to Cart"
                                            fieldDescription="Label for the add to cart button."
                                            fieldLabel="Add to Cart Label"
                                            name="./addToCartLabel"/>
                                    <remove-from-cart-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Remove From Cart"
                                            fieldDescription="Label for the remove from cart button."
                                            fieldLabel="Remove From Cart Label"
                                            name="./removeFromCartLabel"/>
                                </items>
                            </column>
                        </items>
                    </main>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
